{
"manifest_version":2,
"name": "screenreader",
  "version": "0.1",
  "description" : "read web pages aloud easily",
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
		"file:///*/*"
      ],
      "js": ["xpath.js","browserspeak.js","screenreader.js"
	  ],
	  "css": ["sc.css"
	  
	  ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
	"file:///*/*"
  ]
}
